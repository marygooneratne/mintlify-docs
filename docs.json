{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Loopscale Blog",
  "description": "Updates, stories, and announcements from the Loopscale team",
  "colors": {
    "primary": "#276ED6",
    "light": "#F8F9FB",
    "dark": "#151619"
  },
  "favicon": "/static/assets/favicon.svg",
  "icons": {
    "library": "fontawesome"
  },
  "fonts": {
    "family": "ABC Diatype Unlicensed Trial",
    "source": "https://loopscale-site.s3.us-east-1.amazonaws.com/fonts/ABCDiatype-Regular-Trial.woff",
    "format": "woff"
  },
  "appearance": { "default": "light", "strict": true },
  "navigation": {
    "pages": ["home", {"group": "Posts", "pages":[ "posts/launch", "posts/structured-products","posts/flex-appeal","posts/modular-lending", "posts/closed-beta" ]}]
  },
  "logo": {
    "light": "/static/assets/logo/light.svg",
    "dark": "/static/assets/logo/dark.svg",
    "href": "https://blog.loopscale.com"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Launch App",
      "href": "https://app.loopscale.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/LoopscaleLabs",
      "discord": "https://discord.gg/loopscale",
      "linkedin": "https://linkedin.com/company/LoopscaleLabs",
      "website": "https://loopscale.com"
    }
  }
}
